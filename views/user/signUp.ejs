<% layout("layouts/boilerplate") -%>
    <!-- Section: Design Block -->
    <section class="background-radial-gradient overflow-hidden">
        <style>
            .background-radial-gradient {
                background-color: hsl(218, 41%, 15%);
                background-image: radial-gradient(650px circle at 0% 0%,
                        hsl(218, 41%, 35%) 15%,
                        hsl(218, 41%, 30%) 35%,
                        hsl(218, 41%, 20%) 75%,
                        hsl(218, 41%, 19%) 80%,
                        transparent 100%),
                    radial-gradient(1250px circle at 100% 100%,
                        hsl(218, 41%, 45%) 15%,
                        hsl(218, 41%, 30%) 35%,
                        hsl(218, 41%, 20%) 75%,
                        hsl(218, 41%, 19%) 80%,
                        transparent 100%);
            }
        </style>
        <div class="container px-4 py-5 px-md-5 text-center text-lg-start my-5">
            <div class="row gx-lg-5 align-items-center mb-5">
                <div class="col-lg-6 mb-5 mb-lg-0" style="z-index: 10">
                    <h1 class="my-5 display-5 fw-bold ls-tight" style="color: hsl(218, 81%, 95%)">
                        Find the best <br />
                        <span style="color: hsl(218, 81%, 75%)">campgrounds near by</span>
                    </h1>
                    <p class="mb-4 opacity-70" style="color: hsl(218, 81%, 85%)">
                        Fresh air, good company, and a warm campfire.
                        The best memories are made around the campfire.
                        Camping is the ultimate way to unplug. Sign Up Now.
                    </p>
                </div>

                <div class="col-lg-6 mb-5 mb-lg-0 position-relative">
                    <div id="radius-shape-1" class="position-absolute rounded-circle shadow-5-strong"></div>
                    <div id="radius-shape-2" class="position-absolute shadow-5-strong"></div>

                    <div class="card bg-glass">
                        <div class="card-body px-4 py-5 px-md-5">
                            <form action="/signUp" method="POST" novalidate class="needs-validation">
                                <div class="form-outline mb-4">
                                    <input class="form-control form-control-lg" type="text" id="username"
                                        name="username" required />
                                    <label class="form-label" for="username">Username</label>
                                    <!-- <div class="valid-feedback">
                                        Looks good!
                                    </div> -->
                                </div>
                                <div class="form-outline mb-4">
                                    <input class="form-control form-control-lg" type="email" id="email" name="email"
                                        required />
                                    <label class="form-label" for="email">Email</label>
                                    <!-- <div class="valid-feedback">
                                        Looks good!
                                    </div> -->
                                </div>

                                <div class="form-outline mb-4">
                                    <input class="form-control form-control-lg" type="password" id="password"
                                        name="password" required />
                                    <label class="form-label" for="password">Password</label>
                                    <!-- <div class="valid-feedback">
                                        Looks good!
                                    </div> -->
                                </div>
                                <!-- Submit button -->
                                <button type="submit" class="btn btn-primary btn-block mb-4">
                                    Sign up
                                </button>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Section: Design Block -->